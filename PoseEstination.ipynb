# =========================================
# MediaPipe Pose - FULL JUPYTER VERSION
# IMAGE + VIDEO + ANGLE
# =========================================

import cv2
import numpy as np
import mediapipe as mp
import matplotlib.pyplot as plt

# =========================================
# 1️⃣ PATHS (EDIT THESE)
# =========================================
IMAGE_PATH = r"pose.jpg"
VIDEO_PATH = r"cam0#030.avi"
# =========================================
# 2️⃣ MEDIAPIPE INITIALIZATION
# =========================================
mp_pose = mp.solutions.pose
mp_drawing = mp.solutions.drawing_utils

# =========================================
# 3️⃣ ANGLE FUNCTION
# =========================================
def calculate_angle(a, b, c):
    a = np.array(a)
    b = np.array(b)
    c = np.array(c)

    radians = np.arctan2(c[1]-b[1], c[0]-b[0]) - \
              np.arctan2(a[1]-b[1], a[0]-b[0])

    angle = np.abs(radians * 180.0 / np.pi)

    if angle > 180:
        angle = 360 - angle

    return angle

# =========================================
# 4️⃣ IMAGE POSE DETECTION (JUPYTER SAFE)
# =========================================
def run_pose_on_image(image_path):
    image = cv2.imread(image_path)

    if image is None:
        raise FileNotFoundError("❌ Image not found!")

    with mp_pose.Pose(static_image_mode=True) as pose:
        results = pose.process(cv2.cvtColor(image, cv2.COLOR_BGR2RGB))

        if results.pose_landmarks:
            mp_drawing.draw_landmarks(
                image,
                results.pose_landmarks,
                mp_pose.POSE_CONNECTIONS
            )

    plt.figure(figsize=(6,8))
    plt.imshow(cv2.cvtColor(image, cv2.COLOR_BGR2RGB))
    plt.axis("off")
    plt.title("POSE - IMAGE")
    plt.show()

# =========================================
# 5️⃣ VIDEO POSE + ANGLE (JUPYTER SAFE)
# =========================================
def run_pose_on_video(video_path):
    cap = cv2.VideoCapture(video_path)

    if not cap.isOpened():
        raise FileNotFoundError("❌ Video not found!")

    angles = []

    with mp_pose.Pose(
        min_detection_confidence=0.5,
        min_tracking_confidence=0.5
    ) as pose:

        frame_count = 0

        while cap.isOpened():
            ret, frame = cap.read()
            if not ret:
                break

            frame_count += 1

            image_rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
            image_rgb.flags.writeable = False
            results = pose.process(image_rgb)
            image_rgb.flags.writeable = True

            image = cv2.cvtColor(image_rgb, cv2.COLOR_RGB2BGR)

            if results.pose_landmarks:
                landmarks = results.pose_landmarks.landmark

                shoulder = [
                    landmarks[mp_pose.PoseLandmark.RIGHT_SHOULDER.value].x,
                    landmarks[mp_pose.PoseLandmark.RIGHT_SHOULDER.value].y
                ]
                elbow = [
                    landmarks[mp_pose.PoseLandmark.RIGHT_ELBOW.value].x,
                    landmarks[mp_pose.PoseLandmark.RIGHT_ELBOW.value].y
                ]
                wrist = [
                    landmarks[mp_pose.PoseLandmark.RIGHT_WRIST.value].x,
                    landmarks[mp_pose.PoseLandmark.RIGHT_WRIST.value].y
                ]

                angle = calculate_angle(shoulder, elbow, wrist)
                angles.append(angle)

                mp_drawing.draw_landmarks(
                    image,
                    results.pose_landmarks,
                    mp_pose.POSE_CONNECTIONS
                )

          
            if frame_count % 30 == 0:
                plt.figure(figsize=(4,6))
                plt.imshow(cv2.cvtColor(image, cv2.COLOR_BGR2RGB))
                plt.axis("off")
                plt.title(f"Frame {frame_count}")
                plt.show()

    cap.release()
    return angles

# =========================================
# 6️⃣ RUN EVERYTHING
# =========================================
print("▶ Running pose on IMAGE...")
run_pose_on_image(IMAGE_PATH)

print("▶ Running pose on VIDEO...")
angles = run_pose_on_video(VIDEO_PATH)

# =========================================
# 7️⃣ PLOT ANGLES
# =========================================
plt.figure()
plt.plot(angles)
plt.xlabel("Frame")
plt.ylabel("Elbow Angle (degree)")
plt.title("Elbow Angle Over Time")
plt.show()
